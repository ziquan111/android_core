<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:id="@+id/big_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu_bar">

        <ImageView
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_home_white_48dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:onClick="mainViewClicked"
            android:id="@+id/main_view_button"/>

        <ImageView
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/main_view_button"
            android:src="@drawable/ic_gallery_white_24dp"
            android:scaleType="centerInside"
            android:onClick="backButtonOnClicked"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/back_button"/>

        <org.ros.android.view.RosButton
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_restore_white_48dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:id="@+id/restore_button"/>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
