<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:id="@+id/big_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu_bar">

        <org.ros.android.view.RosButton
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_flight_takeoff_white_24dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/takeoff_land_button"/>

        <org.ros.android.view.RosShootButton
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_camera_alt_white_24dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/shoot_button"/>

        <ImageView
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/takeoff_land_button"
            android:src="@drawable/ic_gallery_white_24dp"
            android:onClick="galleryViewClicked"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/gallery_button"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_bar_height"
            android:layout_toEndOf="@id/shoot_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <org.ros.android.view.RosButton
                    android:layout_width="@dimen/button_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_panorama_horizontal_grey_18dp"
                    android:scaleType="centerInside"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/pano_button"/>

                <org.ros.android.view.RosButton
                    android:layout_width="@dimen/button_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_orbit_grey_18dp"
                    android:scaleType="centerInside"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/orbit_button"/>

                <org.ros.android.view.RosButton
                    android:layout_width="@dimen/button_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_zigzag_grey_18dp"
                    android:scaleType="centerInside"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/zigzag_button"/>

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/menu_bar_height"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="orbit"-->
                    <!--/>-->
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <org.ros.android.view.RosAugmentedImageView
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:layout_above="@id/menu_bar"
        android:id="@+id/camera_view" />






