<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:id="@+id/big_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_height"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu_bar">

        <org.ros.android.view.RosButton
            android:layout_width="@dimen/takeoff_land_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_flight_takeoff_white_24dp"
            android:id="@+id/takeoff_land_button"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_bar_height"
            android:layout_toLeftOf="@id/takeoff_land_button"
            android:background="@android:color/holo_blue_dark"/>
    </RelativeLayout>

    <org.ros.android.view.RosAugmentedImageView
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:layout_above="@id/menu_bar"
        android:id="@+id/camera_view" />

    <org.ros.android.view.RosButton
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_camera_white_48dp"
        android:id="@+id/shoot_button"/>

    <org.ros.android.view.RosButton
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:background="@android:color/holo_purple"
        android:id="@+id/gallery_button"/>

    <org.ros.android.view.RosAugmentedImageView
        android:layout_width="@dimen/battery_width"
        android:layout_height="@dimen/battery_height"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/battery" />
</RelativeLayout>

